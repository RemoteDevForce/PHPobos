{% extends 'base.html.twig' %}

{% block title %}PHPobos Portal Application{% endblock %}

{% block body %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>

        body {
            background-image: url("images/portal.gif");
            background-repeat: no-repeat;
            background-position: top center;
        }
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .portal-font {
            text-align: center;
            font-family: 'Press Start 2P', Arial;
        }

        .big-font {
            font-size: 2em;
        }

        .small-font {
            font-size: .75em;
        }

        .red {
            color: red;
            font-style: oblique;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
        }

        button.button7 {
            padding: 0.7em 3.4em;
            border-radius: 0.4em;
            box-sizing: border-box;
            text-decoration: none;
            font-size: 2em;
            font-family: 'Press Start 2P', Arial;
            font-weight: 400;
            color: #FFFFFF;
            background-color: #676f78;
            box-shadow: inset 0 -0.6em 1em -0.35em rgba(0, 0, 0, 0.17), inset 0 0.6em 2em -0.3em rgba(255, 255, 255, 0.15), inset 0 0 0em 0.05em rgba(255, 255, 255, 0.12);
            text-align: center;
            position: relative;
        }

        button.button7:active {
            box-shadow: inset 0 0.6em 2em -0.3em rgba(0, 0, 0, 0.15), inset 0 0 0em 0.05em rgba(255, 255, 255, 0.12);
        }

        @media all and (max-width: 30em) {
             button.button7 {
                display: block;
                margin: 0.4em auto;
            }
        }

        .element_transparent {
            opacity: 0;
        }

        .element_faded {
            transition: opacity 3s;
            opacity: 100%; /* or whatever values you want */
        }
    </style>
    <div class="lines">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </div>
    <div class="example-wrapper">
        <p class="portal-font big-font">PHPobos Portal System</p>
        <p class="center portal-font small-font">STATUS: ONLINE ✅</p>

        <button class="button7"
                onclick="document.getElementById('sound1').play();
                    document.getElementById('comms').className = 'element_faded center';
            ">
            Establish Comms
        </button>
            <img id="comms" class="element_transparent" width="420px" src="images/commswave.gif"/>
        <audio id="sound1" src="sounds/hello.mp3" preload="auto"></audio>

        <p id="warning" class="portal-font small-font red">Please contact administrators before starting the system!</p>
    </div>
    <a href="/on">
        <img id=redbtn" width="400px" class="center" src="images/button.png"/>
    </a>
{% endblock %}
